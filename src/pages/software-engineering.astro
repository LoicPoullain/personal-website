        }
      ]}
      type="work"
      showLinkedIn
    />
    <OrganizationListCard
      title="Education"
      organizations={[
        {
          name: 'CentraleSupélec, Paris-Saclay University',
          role: 'BsC & MsC, Computer Science',
          startDate: '2014',
          endDate: '2018',
          url: 'https://www.centralesupelec.fr/',
          image: centraleSupelecLogo
        }
      ]}
      type="education"
    />
  </TopicPageSecondColumn>
</TopicPage>